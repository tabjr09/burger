<h1>Tasty Burgers</h1>


{{!-- <div class="row"> --}}
  

<div class="row">
  <div class = "col-md-6 burger-col">
    <h3>Available Burgers</h3>
    {{#each burgers}}
      {{#unless devoured}}
          {{> cats/cat-block devoured=true}}
        {{/unless}}
      {{/each}}
  </div>



  <div class="col-md-6 burger-col">

    <h3>Eaten Burgers</h3> 
    {{#each burgers}}
      {{#if devoured}}
        <div class="burger-li">
        {{burger_name}}
        </div>
      {{/if}}
    {{/each}}
  </div>
 </div>
{{!-- </div> --}}

<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bgr">Burger Name:</label>
    <input type="text" id="bgr" name="burger_name">
  </div>


  <button type="submit">Add Burger</button>
</form>
