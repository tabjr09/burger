<h1>Tasy Burgers</h1>

<h2>Burgers that are not devoured!</h2>


<div class="row">
  <div class="col-lg-6">
  {{#each burgerdata}}
    {{#unless this.devoured}}
      <pre>{{this.burger_name}}</pre>
    {{/unless}}
  {{/each}} 
  </div>
</div>


<h2>Burgers that are devoured!</h2>


<div class="row">
  <div class="col-lg-6">
  {{#each burgerdata}}
    {{#if this.devoured}}
      <pre>{{this.burger_name}}</pre>
    {{/if}}
  {{/each}} 
  
  </div>
</div>


<h2>Add a Burger</h2>
<form class="create-form">

  <div class="form-group">
    <label for="bn">Burger Name:</label>
    <input type="text" id="bn" name="name">
  </div>

